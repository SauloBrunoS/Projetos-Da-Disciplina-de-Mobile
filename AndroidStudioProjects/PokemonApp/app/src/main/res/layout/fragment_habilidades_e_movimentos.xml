<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HabilidadesEMovimentosFragment"
    android:background="#a8e6cf">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_habilidades"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="77dp"
            android:text="Habilidades"
            android:textColor="#FF0000"
            android:textAlignment="center"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_movimentos"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:text="Movimentos"
            android:textColor="#FF0000"
            android:textSize="40dp"
            app:layout_constraintStart_toStartOf="@+id/tv_habilidades"
            app:layout_constraintTop_toBottomOf="@+id/tv_habilidades" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>