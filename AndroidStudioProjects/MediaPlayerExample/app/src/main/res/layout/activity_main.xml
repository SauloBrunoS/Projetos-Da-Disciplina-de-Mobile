<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_tocar_som"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="13dp"
        android:text="Tocar Som"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_miar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_miar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_latir"
        app:layout_constraintStart_toStartOf="@+id/btn_tocar_som"
        app:layout_constraintTop_toBottomOf="@+id/btn_tocar_som"
        app:srcCompat="@drawable/cat" />

    <ImageButton
        android:id="@+id/btn_latir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_zurrar"
        app:layout_constraintStart_toStartOf="@+id/btn_miar"
        app:layout_constraintTop_toBottomOf="@+id/btn_miar"
        app:srcCompat="@drawable/dog" />

    <ImageButton
        android:id="@+id/btn_zurrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_latir"
        app:layout_constraintTop_toBottomOf="@+id/btn_latir"
        app:srcCompat="@drawable/donkey" />
</androidx.constraintlayout.widget.ConstraintLayout>